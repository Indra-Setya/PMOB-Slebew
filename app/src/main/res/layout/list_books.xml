<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A2D23">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Search Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/search_background">

                <!-- Search Bar -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAlignBottom="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/search_icon"></ImageView>

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search for books..."
                    android:layout_marginHorizontal="8dp"
                    android:textColor="#000000" />
            </LinearLayout>
            <!-- Book Recommendation 1 -->
            <LinearLayout
                android:id="@+id/book_1_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/book_1"
                    android:contentDescription="Recommendation 1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Harry Potter and the Goblet of Fire"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rating_book_1"
                    android:contentDescription="Recommendation 1"
                    android:layout_marginHorizontal="10dp"/>
            </LinearLayout>
            <!-- Book Recommendation 2 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/book_1"
                    android:contentDescription="Recommendation 1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Harry Potter and the Goblet of Fire"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rating_book_1"
                    android:contentDescription="Recommendation 1"
                    android:layout_marginHorizontal="10dp"/>
            </LinearLayout>
            <!-- Book Recommendation 3 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/book_1"
                    android:contentDescription="Recommendation 1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Harry Potter and the Goblet of Fire"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rating_book_1"
                    android:contentDescription="Recommendation 1"
                    android:layout_marginHorizontal="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:padding="8dp">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#000000"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/home_icon"
            android:orientation="vertical"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:padding="8dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:src="@drawable/home_icon"
                android:contentDescription="Home"
                android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/book_icon"
            android:orientation="vertical"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:padding="8dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:src="@drawable/book_icon_active"
                android:contentDescription="book"
                android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Books"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/history_icon"
            android:orientation="vertical"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:padding="8dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:src="@drawable/history_icon"
                android:contentDescription="History"
                android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="History"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="14sp" />
        </LinearLayout>

        <!--            account menu-->
        <LinearLayout
            android:id="@+id/account_icon"
            android:orientation="vertical"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:padding="8dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:src="@drawable/account_icon"
                android:contentDescription="Account"
                android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>