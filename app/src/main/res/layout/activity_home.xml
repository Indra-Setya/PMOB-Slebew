<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A2D23">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header Section -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/photoProfile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/example_pp"
                    android:contentDescription="Profile Picture"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="Welcome\nyour_bestieðŸ‘‹"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/notif_icon">
                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/search_background">

                <!-- Search Bar -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAlignBottom="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/search_icon"></ImageView>

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search for books..."
                    android:layout_marginHorizontal="8dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Categories -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Category"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"  />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3"
                android:layout_marginTop="8dp">

                <!-- Category Buttons -->
                <Button style="@styles/CategoryButton" android:id="@+id/c_motivasi" android:text="Motivation" />
                <Button style="@styles/CategoryButton" android:id="@+id/c_sains" android:text="Sains" />
                <Button style="@styles/CategoryButton" android:id="@+id/c_fantasi" android:text="Fantasi" />
                <Button style="@styles/CategoryButton" android:id="@+id/c_kesehatan" android:text="Kesehatan" />
                <Button style="@styles/CategoryButton" android:id="@+id/c_komikGrafis" android:text="Komik, Grafis" />
                <Button style="@styles/CategoryButton" android:id="@+id/c_horor" android:text="Horror" />
                <Button style="@styles/CategoryButton" android:id="@+id/c_psikologi" android:text="Psikologi" />
                <Button style="@styles/CategoryButton" android:id="@+id/c_edukasi" android:text="Edukasi" />
                <Button style="@styles/CategoryButton" android:id="@+id/c_uangInvest" android:text="Uang, Invest" />
            </GridLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp" >
                <!-- New Arrivals -->
                <TextView
                    android:text="Baru Datang"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="View All"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginEnd="16dp"/>
            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        >
                        <!-- Book Items -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:src="@drawable/example_book"
                            android:contentDescription="Book 1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Derita Mahasiswa"
                            android:textColor="#FFFFFF"
                            android:textAlignment="center"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        >
                        <!-- Book Items -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:src="@drawable/example_book"
                            android:contentDescription="Book 1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Derita Mahasiswa"
                            android:textColor="#FFFFFF"
                            android:textAlignment="center"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        >
                        <!-- Book Items -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:src="@drawable/example_book"
                            android:contentDescription="Book 1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Derita Mahasiswa"
                            android:textColor="#FFFFFF"
                            android:textAlignment="center"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        >
                        <!-- Book Items -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:src="@drawable/example_book"
                            android:contentDescription="Book 1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Derita Mahasiswa"
                            android:textColor="#FFFFFF"
                            android:textAlignment="center"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Rekomendasi Section -->
            <TextView
                android:text="Rekomendasi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp" />

            <!-- Book Recommendation 1 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:layout_marginTop="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/example_novel"
                    android:contentDescription="Recommendation 1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Harry Potter and the Goblet of Fire"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pada tahun keempatnya di Hogwarts, Harry dijebak untuk berkompetisi..."
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"/>
            </LinearLayout>

            <!-- Book Recommendation 2 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:layout_marginTop="8dp"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/example_novel"
                    android:contentDescription="Recommendation 1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Harry Potter and the Goblet of Fire"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pada tahun keempatnya di Hogwarts, Harry dijebak untuk berkompetisi..."
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:padding="8dp">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
        <LinearLayout
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#000000"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/home_icon"
                android:orientation="vertical"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:padding="8dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/home_icon_active"
                    android:contentDescription="Home"
                    android:background="@android:color/transparent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/book_icon"
                android:orientation="vertical"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:padding="8dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/book_icon"
                    android:contentDescription="book"
                    android:background="@android:color/transparent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Books"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/history_icon"
                android:orientation="vertical"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:padding="8dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/history_icon"
                    android:contentDescription="History"
                    android:background="@android:color/transparent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="14sp" />
            </LinearLayout>

<!--            account menu-->
            <LinearLayout
                android:id="@+id/account_icon"
                android:orientation="vertical"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:padding="8dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/account_icon"
                    android:contentDescription="Account"
                    android:background="@android:color/transparent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>